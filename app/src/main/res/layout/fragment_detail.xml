<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="app.com.example.heeyoung.artsshow.DetailActivity$PlaceholderFragment">

   <HorizontalScrollView
       android:id="@+id/detail_artsimages"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <ImageView
               android:id="@+id/detail_arts1"
               android:layout_width="200dip"
               android:layout_height="200dip"
               android:src="@drawable/image"/>
           <ImageView
               android:id="@+id/detail_arts2"
               android:layout_width="200dip"
               android:layout_height="200dip"
               android:src="@drawable/image" />
           <ImageView
               android:id="@+id/detail_arts3"
               android:layout_width="200dip"
               android:layout_height="200dip"
               android:src="@drawable/image"/>
       </LinearLayout>

       </HorizontalScrollView>

    <TextView
        android:id="@+id/detail_arts_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="작품명"
        android:layout_gravity="center_horizontal"

        />
    <TextView
        android:id="@+id/detail_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="작품 설명이 없습니다."
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/detail_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0원"
        android:layout_gravity="bottom|right"/>
</LinearLayout>
